<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReportActivity"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/patientSpinner"
            android:prompt="@string/app_name"
            android:padding="10dp"
            android:layout_margin="10dp"
            style="@style/spinner_style"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBloodpressure"
        android:hint="Blood Pressure"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_style" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHeartrate"
        android:hint="Heart Rate"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_style" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRespiratoryrate"
        android:hint="Respiratory Rate"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_style" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBloodoxygen"
        android:hint="Blood Oxygen"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_style" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddReport"
        android:text="Add Report"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_design"
        android:textColor="@color/buttonColorText"/>

</LinearLayout>